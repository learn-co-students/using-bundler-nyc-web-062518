source "https://rubygems.org"

#list the hashie gem without specifying a version
gem 'hashie'
#list the sinatra gem with the specific version 1.4.4
gem 'sinatra', '1.4.4'
#list the octokit gem specifying version 2.0 with a twiddle-wakka
gem 'octokit', '~> 2.0'
#list the awesome_print gem specifying a remote git repository
gem 'awesome_print', :git => 'git@github.com:awesome-print/awesome_print.git'
#contains pry gem in development group using hash argument
gem 'pry', :group => "development"
#contains rspec gem in test group using block syntax
group :test do
  gem 'rspec'
end
